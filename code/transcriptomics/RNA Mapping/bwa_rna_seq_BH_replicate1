# Load modules
module load bioinfo-tools
module load bwa/0.7.17
module load samtools/1.6

bwa index /home/nadia/pilon.fasta
bwa mem -t 2 /home/nadia/pilon.fasta \
    /home/nadia/genome_analysis/data/RNA/RNA-Seq_BH/trim_paired_ERR1797972_pass_1.fastq.gz \
    /home/nadia/genome_analysis/data/RNA/RNA-Seq_BH/trim_paired_ERR1797972_pass_2.fastq.gz \
    | samtools sort -@ 4 -T tmp3 -O BAM -o RNA-Seq_BH_replicate_1.bam -